<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smart Note</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <!-- fonts (Jacqui) -->
  <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@300&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="/scripts/app.js"></script>

</head>

<body>


  <nav>
    <div class="header-left">
      <span>Smart BREW List</span>
    </div>
    <div class="header-right">
      <button class="login" type="submit">Login</button>
      <button class="register" type="submit">Register</button>
    </div>
  </nav>

  <br>

  <main>

  <br>

    <section class="new-task-form">
      <form method="POST" action="/tasks">
        <input type="text" class="new-task-input" name="tasktext" placeholder="Create a new task"></input>
        <button class="submit-task-button" type="submit">Submit</button>
      </form>
    </section>

    <article class="tasks-container">

      <h3>Watch Movies/Shows</h3>
      <div class="watch">
      </div>

      <h3>Read Books</h3>
      <div class="read">
      </div>

      <h3>Eat at Restaurants</h3>
      <div class="eat">
      </div>

      <h3>Buy Products</h3>
      <div class="buy">
      </div>

      <h3>Unknown</h3>
      <div class="unknown">
      </div>



    </article>
    </script>
  </main>
</body>
</html>
